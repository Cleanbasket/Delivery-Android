<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
	<item android:state_pressed="true" > 
		<shape> 
			<gradient 
                android:startColor="#30000000" 
                android:endColor="#30000000" 
                android:angle="270" /> 
            <stroke 
                android:width="0dp" 
                android:color="#30000000" /> 
            <corners 
                android:radius="1dp" /> 
            <padding 
                android:left="0dp" 
                android:top="0dp" 
                android:right="0dp" 
                android:bottom="0dp" /> 
        </shape> 
    </item> 
    <item>         
        <shape> 
            <gradient 
                android:endColor="#00000000" 
                android:startColor="#00000000" 
                android:angle="270" /> 
            <stroke 
                android:width="0dp" 
                android:color="#00000000" /> 
            <corners 
                android:radius="1dp" /> 
            <padding 
                android:left="0dp" 
                android:top="0dp" 
                android:right="0dp" 
                android:bottom="0dp" /> 
        </shape> 
    </item>
</selector>