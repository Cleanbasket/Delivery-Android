<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="160302-9429"
        android:id="@+id/order_number"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@color/blue"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:weightSum="6">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="수거"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_weight="5"
            android:gravity="center|center_vertical" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="2016-02-24 20:30"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/pickup_date"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:weightSum="6"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="배달"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_weight="5"
            android:gravity="center|center_vertical" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="2016-02-24 20:30"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/dropoff_date"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:weightSum="6"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="번호"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_weight="5"
            android:gravity="center|center_vertical" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="01089934822"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/phone"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:weightSum="6"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="주소"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_weight="5"
            android:gravity="center|center_vertical" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/address"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:weightSum="6"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="품목"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_weight="5"
            android:gravity="center|center_vertical" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="와이셔츠(2) 티셔츠(2)"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/items"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:weightSum="6"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="요청"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_weight="5"
            android:gravity="center|center_vertical" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="운동화 무료"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/memo"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:weightSum="6"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="가격"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_weight="5"
            android:gravity="center|center_vertical" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="10,000 (결제종류/쿠폰)"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/price"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:weightSum="6"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="배달자 메모 (완료시 입력)"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_weight="5"
            android:gravity="center" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/note"
            android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:editable="true"
            android:hint="변동 사항 있을시 입력해주세요," />
    </LinearLayout>

</LinearLayout>